<Window x:Class="Enfolderer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enfolderer.App"
    mc:Ignorable="d"
    Title="MTG Binder" Height="900" Width="1400" MinWidth="1100" MinHeight="700"
    Background="{Binding BinderBackground}">
    <Window.Resources>
    <local:QuantityImageConverter x:Key="QuantityImageConverter" />
        <Style x:Key="CardSlotStyle" TargetType="Border">
            <Setter Property="Margin" Value="4" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#222" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
        <DataTemplate x:Key="CardTemplate">
        <Border x:Name="RootBorder" Style="{StaticResource CardSlotStyle}"
            Background="{Binding Background}"
            ToolTip="{Binding Tooltip}"
            MouseLeftButtonUp="CardSlot_MouseLeftButtonUp">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="Border" x:Key="QtyBadgeStyle">
                            <Setter Property="Background" Value="#AA000000" />
                            <Setter Property="CornerRadius" Value="4" />
                            <Setter Property="Padding" Value="2,0" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Top" />
                            <Setter Property="Margin" Value="3" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image x:Name="CardImage" Stretch="Uniform" Margin="3" Grid.Row="0">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource QuantityImageConverter}">
                                <Binding Path="ImageSource" />
                                <Binding Path="Quantity" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                    <!-- Quantity badge overlay (top-left) -->
                    <Border Style="{StaticResource QtyBadgeStyle}" Grid.Row="0" x:Name="QtyBadge">
                        <TextBlock Text="{Binding QuantityDisplay}" FontSize="11" Foreground="White" FontWeight="Bold" />
                    </Border>
                    <StackPanel Grid.Row="1" Margin="2">
                        <TextBlock Text="{Binding Number}" FontSize="11" Foreground="#EEE" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" FontSize="11" 
                                   Foreground="White" HorizontalAlignment="Center" TextAlignment="Center" Margin="1"/>
                        <TextBlock Text="{Binding Set}" FontSize="9" Foreground="#CCC" HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
        <!-- Placeholder back image (not a real MFC back): suppress qty/outline/click -->
        <DataTrigger Binding="{Binding IsPlaceholderBack}" Value="True">
                    <Setter TargetName="RootBorder" Property="Border.BorderBrush" Value="#444" />
                    <Setter TargetName="RootBorder" Property="Border.BorderThickness" Value="1" />
                    <Setter TargetName="CardImage" Property="UIElement.Opacity" Value="1" />
                    <Setter TargetName="RootBorder" Property="UIElement.IsHitTestVisible" Value="False" />
                    <Setter TargetName="QtyBadge" Property="UIElement.Visibility" Value="Collapsed" />
                </DataTrigger>
                <!-- Fallback detection for legacy backface placeholders by Set code -->
                <DataTrigger Binding="{Binding Set}" Value="__BACK__">
                    <Setter TargetName="RootBorder" Property="Border.BorderBrush" Value="#444" />
                    <Setter TargetName="RootBorder" Property="Border.BorderThickness" Value="1" />
                    <Setter TargetName="CardImage" Property="UIElement.Opacity" Value="1" />
                    <Setter TargetName="RootBorder" Property="UIElement.IsHitTestVisible" Value="False" />
                    <Setter TargetName="QtyBadge" Property="UIElement.Visibility" Value="Collapsed" />
                </DataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Quantity}" Value="0" />
            <Condition Binding="{Binding IsPlaceholderBack}" Value="False" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="CardImage" Property="UIElement.Opacity" Value="0.50" />
                    <Setter TargetName="RootBorder" Property="Border.BorderBrush" Value="#FFDD4444" />
                    <Setter TargetName="RootBorder" Property="Border.BorderThickness" Value="2" />
                </MultiDataTrigger>
                <DataTrigger Binding="{Binding QuantityDisplay}" Value="">
                    <Setter TargetName="QtyBadge" Property="UIElement.Visibility" Value="Collapsed" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Update mainDb from CSV..." Click="UpdateMainDbFromCsv_Click" Visibility="Collapsed" />
                <MenuItem Header="Import Scryfall Set Into mainDb" Click="ImportScryfallSet_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="Exit_Click" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <!-- Primary status (metadata resolving / all metadata loaded) -->
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
            <!-- Current page indicator -->
            <StatusBarItem>
                <TextBlock Text="{Binding PageDisplay}" />
            </StatusBarItem>
            <!-- Transient image / metadata fetch flash placed AFTER page to avoid left edge jumping -->
            <StatusBarItem>
                <TextBlock Text="{Binding ApiStatus}" />
            </StatusBarItem>
            <Separator />
            <!-- HTTP panel (latest call + counters) right-aligned -->
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding HttpPanel}" TextAlignment="Right" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Fixed layout navigation bar -->
            <Grid Grid.Row="0" Margin="10" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <!-- Left nav buttons group -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Spacer -->
                    <ColumnDefinition Width="20" />
                    <!-- Center label fixed width so outer buttons never move -->
                    <ColumnDefinition Width="300" />
                    <!-- Spacer -->
                    <ColumnDefinition Width="20" />
                    <!-- Right nav buttons group -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Flexible space pushes jump panel to far right -->
                    <ColumnDefinition Width="*" />
                    <!-- Jump panel -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style x:Key="NavButtonStyle" TargetType="Button">
                        <Setter Property="Width" Value="60" />
                        <Setter Property="Margin" Value="4,0" />
                        <Setter Property="Padding" Value="4,4" />
                        <Setter Property="FontSize" Value="10" />
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="10" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" HorizontalAlignment="Center" />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <!-- Left group -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <Button Style="{StaticResource NavButtonStyle}" Content="⏪ Prev" Command="{Binding PrevBinderCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="⏮ First" Command="{Binding FirstCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="◀ Prev" Command="{Binding PrevCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Set ◀" Command="{Binding PrevSetCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Open" Click="OpenCollection_Click" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Refresh" Click="RefreshQuantities_Click" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Auto mprt" Click="AutoImportMissingSets_Click" ToolTip="Import any binder set codes missing from mainDb via Scryfall" />
                </StackPanel>
                <!-- Center fixed-width page display -->
                <Border Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding PageDisplay}" FontSize="16" FontWeight="Bold" TextAlignment="Center" TextTrimming="CharacterEllipsis" />
                </Border>
                <!-- Right group -->
                <StackPanel Orientation="Horizontal" Grid.Column="4" VerticalAlignment="Center">
                    <Button Style="{StaticResource NavButtonStyle}" Content="Next ▶" Command="{Binding NextCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Last ⏭" Command="{Binding LastCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Binder ⏩" Command="{Binding NextBinderCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Set ▶" Command="{Binding NextSetCommand}" />
                </StackPanel>
                <!-- Jump controls at far right -->
                <StackPanel Orientation="Horizontal" Grid.Column="6" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Layout:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <ComboBox Width="70" SelectedValue="{Binding LayoutMode}" SelectedValuePath="Content" Margin="0,0,10,0">
                        <ComboBoxItem Content="4x3" />
                        <ComboBoxItem Content="3x3" />
                        <ComboBoxItem Content="2x2" />
                    </ComboBox>
                    <TextBlock Text="Pages/Binder:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Width="60" Text="{Binding PagesPerBinder, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="Binder:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Width="40" Text="{Binding JumpBinderInput, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="Page:" VerticalAlignment="Center" Margin="10,0,4,0" />
                    <TextBox Width="50" Text="{Binding JumpPageInput, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Go" Command="{Binding JumpToPageCommand}" Margin="8,0,0,0" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Left Page (may be hidden for first side) -->
                <ItemsControl Grid.Column="0" ItemsSource="{Binding LeftSlots}" ItemTemplate="{StaticResource CardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding RowsPerPage}" Columns="{Binding ColumnsPerPage}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <Grid Grid.Column="1">
                    <Rectangle Width="30" Fill="#333" RadiusX="6" RadiusY="6" HorizontalAlignment="Center" />
                </Grid>
                <!-- Right Page -->
                <ItemsControl Grid.Column="2" ItemsSource="{Binding RightSlots}" ItemTemplate="{StaticResource CardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding RowsPerPage}" Columns="{Binding ColumnsPerPage}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
