<Window x:Class="Enfolderer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Enfolderer.App"
    xmlns:qty="clr-namespace:Enfolderer.App.Quantity"
    mc:Ignorable="d"
    Title="MTG Binder" Height="900" Width="1400" MinWidth="900" MinHeight="650" ResizeMode="CanResize" 
    Background="{Binding BinderBackground}">
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="F" Command="ApplicationCommands.Find" />
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Find" Executed="SearchFocus_Executed" />
    </Window.CommandBindings>
    <Window.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVis" />
    <qty:QuantityImageConverter x:Key="QuantityImageConverter" />
        <Style x:Key="CardSlotStyle" TargetType="Border">
            <Setter Property="Margin" Value="4" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#222" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
        <DataTemplate x:Key="CardTemplate">
        <Border x:Name="RootBorder" Style="{StaticResource CardSlotStyle}"
            Background="{Binding Background}"
            ToolTip="{Binding Tooltip}"
            MouseLeftButtonUp="CardSlot_MouseLeftButtonUp">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="Border" x:Key="QtyBadgeStyle">
                            <Setter Property="Background" Value="#AA000000" />
                            <Setter Property="CornerRadius" Value="4" />
                            <Setter Property="Padding" Value="2,0" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Top" />
                            <Setter Property="Margin" Value="3" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border x:Name="CardImageContainer" Grid.Row="0" Margin="3" CornerRadius="8" Background="Transparent" SnapsToDevicePixels="True">
                        <Image x:Name="CardImage" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource QuantityImageConverter}">
                                    <Binding Path="ImageSource" />
                                    <Binding Path="Quantity" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                    </Border>
                    <!-- Quantity badge overlay (top-left) -->
                    <Border Style="{StaticResource QtyBadgeStyle}" Grid.Row="0" x:Name="QtyBadge">
                        <TextBlock Text="{Binding QuantityDisplay}" FontSize="11" Foreground="White" FontWeight="Bold" />
                    </Border>
                    <StackPanel Grid.Row="1" Margin="2" x:Name="InfoPanel">
                        <TextBlock Text="{Binding EffectiveNumber}" FontSize="11" Foreground="#EEE" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" FontSize="11" 
                                   Foreground="White" HorizontalAlignment="Center" TextAlignment="Center" Margin="1"/>
                        <TextBlock Text="{Binding Set}" FontSize="9" Foreground="#CCC" HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <!-- Active search highlight -->
                <DataTrigger Binding="{Binding IsSearchHighlight}" Value="True">
                    <Setter TargetName="RootBorder" Property="Border.BorderBrush" Value="#FFFFD447" />
                    <Setter TargetName="RootBorder" Property="Border.BorderThickness" Value="3" />
                    <Setter TargetName="RootBorder" Property="Panel.ZIndex" Value="10" />
                    <Setter TargetName="RootBorder" Property="Border.Background" Value="#66333300" />
                </DataTrigger>
        <!-- Placeholder back image (not a real MFC back): suppress qty/outline/click -->
    <DataTrigger Binding="{Binding IsPlaceholderBack}" Value="True">
                    <Setter TargetName="RootBorder" Property="Border.BorderBrush" Value="#444" />
                    <Setter TargetName="RootBorder" Property="Border.BorderThickness" Value="1" />
                    <Setter TargetName="CardImage" Property="UIElement.Opacity" Value="1" />
                    <Setter TargetName="RootBorder" Property="UIElement.IsHitTestVisible" Value="False" />
                    <Setter TargetName="QtyBadge" Property="UIElement.Visibility" Value="Collapsed" />
            <Setter TargetName="InfoPanel" Property="UIElement.Visibility" Value="Collapsed" />
                </DataTrigger>
                <!-- Fallback detection for legacy backface placeholders by Set code -->
                <DataTrigger Binding="{Binding Set}" Value="__BACK__">
                    <Setter TargetName="RootBorder" Property="Border.BorderBrush" Value="#444" />
                    <Setter TargetName="RootBorder" Property="Border.BorderThickness" Value="1" />
                    <Setter TargetName="CardImage" Property="UIElement.Opacity" Value="1" />
                    <Setter TargetName="RootBorder" Property="UIElement.IsHitTestVisible" Value="False" />
                    <Setter TargetName="QtyBadge" Property="UIElement.Visibility" Value="Collapsed" />
            <Setter TargetName="InfoPanel" Property="UIElement.Visibility" Value="Collapsed" />
                </DataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Quantity}" Value="0" />
            <Condition Binding="{Binding IsPlaceholderBack}" Value="False" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="CardImage" Property="UIElement.Opacity" Value="0.50" />
                    <Setter TargetName="RootBorder" Property="Border.BorderBrush" Value="#FFDD4444" />
                    <Setter TargetName="RootBorder" Property="Border.BorderThickness" Value="2" />
                </MultiDataTrigger>
                <DataTrigger Binding="{Binding QuantityDisplay}" Value="">
                    <Setter TargetName="QtyBadge" Property="UIElement.Visibility" Value="Collapsed" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Update mainDb from CSV..." Click="UpdateMainDbFromCsv_Click" />
                <MenuItem Header="Import Scryfall Set Into mainDb" Click="ImportScryfallSet_Click" />
                <Separator />
                <MenuItem Header="Export _Playset Needs..." Click="ExportPlaysetNeedsGeneric_Click" />
                <Separator />
                <MenuItem Header="Backfill missing 0-qty rows (id &lt; 150000)" Click="BackfillZeroQty_Click" />
                <MenuItem Header="Set Qty = CardId (all rows)" Click="SetQtyEqualsCardId_Click" />
                <MenuItem Header="Restore collection backup (.bak)" Click="RestoreCollectionBackup_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Layout 4x3" Click="Layout4x3_Click" />
                <MenuItem Header="Layout 3x3" Click="Layout3x3_Click" />
                <MenuItem Header="Layout 2x2" Click="Layout2x2_Click" />
                <Separator />
                <MenuItem Header="Set Pages/Binder..." Click="SetPagesPerBinder_Click" />
                <MenuItem Header="Jump to Binder/Page..." Click="JumpDialog_Click" />
                <Separator />
                <MenuItem Header="Auto Import Missing Sets" Click="AutoImportMissingSets_Click" />
            </MenuItem>
            <MenuItem Header="_Search">
                <MenuItem Header="Focus Search (Ctrl+F)" Command="ApplicationCommands.Find" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <!-- Primary status (metadata resolving / all metadata loaded) -->
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
            <!-- CSV import progress -->
        <StatusBarItem Visibility="{Binding ImportInProgress, Converter={StaticResource BoolToVis}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding ImportProgressText}" Margin="0,0,6,0" />
            <ProgressBar Width="200" Height="14" Minimum="0" Maximum="100" Value="{Binding ImportProgress, Mode=OneWay}" />
                </StackPanel>
            </StatusBarItem>
            <!-- Current page indicator -->
            <StatusBarItem>
                <TextBlock Text="{Binding PageDisplay}" />
            </StatusBarItem>
            <!-- Transient image / metadata fetch flash placed AFTER page to avoid left edge jumping -->
            <StatusBarItem>
                <TextBlock Text="{Binding ApiStatus}" />
            </StatusBarItem>
            <Separator />
            <!-- HTTP panel (latest call + counters) right-aligned -->
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding HttpPanel}" TextAlignment="Right" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Simplified responsive navigation bar using WrapPanel -->
            <Grid Grid.Row="0" Margin="6" HorizontalAlignment="Stretch">
                <Grid.Resources>
                    <Style x:Key="NavButtonStyle" TargetType="Button">
                        <Setter Property="Width" Value="60" />
                        <Setter Property="Margin" Value="4,0" />
                        <Setter Property="Padding" Value="4,4" />
                        <Setter Property="FontSize" Value="10" />
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="10" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" HorizontalAlignment="Center" />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <WrapPanel Margin="0" ItemHeight="28" ItemWidth="Auto" VerticalAlignment="Center">
                    <Button Style="{StaticResource NavButtonStyle}" Content="Open..." Click="OpenCollection_Click" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Refresh" Click="RefreshQuantities_Click" ToolTip="Force re-apply quantities and rebuild current pages" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="⏪ Prev" Command="{Binding PrevBinderCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="⏮ First" Command="{Binding FirstCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="◀ Prev" Command="{Binding PrevCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Set ◀" Command="{Binding PrevSetCommand}" />
                    <!-- Fixed-width container to prevent right-side control shifting when PageDisplay length changes -->
                    <Border VerticalAlignment="Center" Margin="8,0" Padding="0" Width="220">
                        <TextBlock Text="{Binding PageDisplay}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                    </Border>
                    <Button Style="{StaticResource NavButtonStyle}" Content="Next ▶" Command="{Binding NextCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Last ⏭" Command="{Binding LastCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Binder ⏩" Command="{Binding NextBinderCommand}" />
                    <Button Style="{StaticResource NavButtonStyle}" Content="Set ▶" Command="{Binding NextSetCommand}" />
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Find:" VerticalAlignment="Center" Margin="0,0,4,0" />
                        <TextBox x:Name="SearchNameBox" Width="170" MinWidth="120" Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}" KeyDown="SearchNameBox_KeyDown"/>
                        <Button Content="Find ▶" Command="{Binding SearchNextCommand}" Margin="6,0,0,0" MouseRightButtonUp="SearchButton_MouseRightButtonUp" ToolTip="Left click: find next name match. Right click: find next set code match." />
                    </StackPanel>
                </WrapPanel>
            </Grid>
            <!-- END responsive navigation bar -->
            <Grid Grid.Row="1" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Left Page (may be hidden for first side) -->
                <ItemsControl Grid.Column="0" ItemsSource="{Binding LeftSlots}" ItemTemplate="{StaticResource CardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding RowsPerPage}" Columns="{Binding ColumnsPerPage}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <Grid Grid.Column="1">
                    <Rectangle Width="30" Fill="#333" RadiusX="6" RadiusY="6" HorizontalAlignment="Center" />
                </Grid>
                <!-- Right Page -->
                <ItemsControl Grid.Column="2" ItemsSource="{Binding RightSlots}" ItemTemplate="{StaticResource CardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding RowsPerPage}" Columns="{Binding ColumnsPerPage}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
